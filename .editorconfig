root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{markdown,md}]
trim_trailing_whitespace = false

[*.{feature,yaml,yml,yml.twig}]
indent_size = 2

[Makefile]
indent_style = tab

[app/etc/env.php]
indent_size = 2

[*.neon]
indent_style=tab
