{
    "name": "inviqa/magento2-bdd-example",
    "type": "project",
    "description": "Magento 2 BDD Example",
    "license": "proprietary",
    "require": {
        "php": "^7.4",
        "magento/product-community-edition": "2.4.2",
        "tkotosz/test-area-magento2": "^1.0"
    },
    "require-dev": {
        "behat/behat": "^3.8",
        "bex/behat-magento2-extension": "^2.1",
        "ergebnis/composer-normalize": "^2.13",
        "phpmd/phpmd": "^2.9",
        "phpspec/phpspec": "^7.0",
        "phpstan/phpstan": "^0.12.78",
        "phpunit/phpunit": "^9.5",
        "povils/phpmnd": "dev-master",
        "sebastian/phpcpd": "^6.0",
        "sensiolabs-de/deptrac-shim": "^0.11.1",
        "slevomat/coding-standard": "^6.4",
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^4.6"
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    },
    "extra": {
        "magento-force": "override"
    },
    "autoload": {
        "psr-0": {
            "": [
                "app/code/",
                "generated/code/"
            ]
        },
        "psr-4": {
            "Magento\\Framework\\": "lib/internal/Magento/Framework/",
            "Magento\\Setup\\": "setup/src/Magento/Setup/",
            "Magento\\": "app/code/Magento/",
            "Zend\\Mvc\\Controller\\": "setup/src/Zend/Mvc/Controller/",
            "Inviqa\\": "src/Inviqa"
        },
        "files": [
            "app/etc/NonComposerComponentRegistration.php",
            "app/etc/InviqaNonComposerComponentRegistration.php"
        ],
        "exclude-from-classmap": [
            "**/dev/**",
            "**/update/**",
            "**/Test/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Magento\\Sniffs\\": "dev/tests/static/framework/Magento/Sniffs/",
            "Magento\\Tools\\": "dev/tools/Magento/Tools/",
            "Magento\\Tools\\Sanity\\": "dev/build/publication/sanity/Magento/Tools/Sanity/",
            "Magento\\TestFramework\\Inspection\\": "dev/tests/static/framework/Magento/TestFramework/Inspection/",
            "Magento\\TestFramework\\Utility\\": "dev/tests/static/framework/Magento/TestFramework/Utility/",
            "Inviqa\\Acceptance\\": "features/bootstrap"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://repo.magento.com/"
        }
    ],
    "minimum-stability": "stable",
    "scripts": {
        "fix-code": [
            "phpcbf -p"
        ],
        "test": [
            "@test-quality",
            "@test-unit",
            "@test-acceptance"
        ],
        "test-acceptance": [
            "behat"
        ],
        "test-quality": [
            "find src/ pub/ -type f \\( -name '*.phtml' -o -name '*.php' \\) | xargs -n 1 -P 8 -i php -l {} | grep -v 'No syntax errors detected' || echo 'OK'",
            "phpcs -p",
            "phpstan analyse",
            "psalm",
            "phpmd ./src text ./phpmd.xml"
        ],
        "test-unit": [
            "phpspec run"
        ]
    }
}
